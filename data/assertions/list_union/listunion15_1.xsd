<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="Z">
	   <xs:complexType>
	      <xs:sequence>
		     <xs:element name="X" maxOccurs="unbounded">
			    <xs:complexType>
				   <xs:attribute name="val" type="union_of_DtList_and_integer"/>				   
				</xs:complexType>
			 </xs:element>
		  </xs:sequence>
		  <xs:assert test="data(X[1]/@val) instance of xs:date+"/>
		  <xs:assert test="count(data(X[1]/@val)) eq 3"/>
		  <xs:assert test="data(X[2]/@val) instance of xs:integer"/>
	   </xs:complexType>
	</xs:element>
	
	<xs:simpleType name="union_of_DtList_and_integer">
	   <xs:union memberTypes="xs:integer">
	      <xs:simpleType>
		     <xs:list itemType="xs:date"/>
		  </xs:simpleType>
	   </xs:union>
	</xs:simpleType>
	
</xs:schema>