<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="X">
       <xs:complexType>
          <xs:sequence>
             <xs:element name="a" type="xs:string"/>
          </xs:sequence>
          <xs:assert test="matches(a, 'hello[\x{0020}]+world')"/>
          <xs:assert test="matches(a, 'hello[\u0020]+world')"/>
       </xs:complexType>
    </xs:element>

</xs:schema>
