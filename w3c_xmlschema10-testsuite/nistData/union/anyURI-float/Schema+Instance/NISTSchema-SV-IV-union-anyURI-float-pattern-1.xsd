<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
        xmlns="NISTSchema-SV-IV-union-anyURI-float-pattern-1-NS"
        targetNamespace="NISTSchema-SV-IV-union-anyURI-float-pattern-1-NS">

  <xs:annotation>
    <xs:documentation>
      The National Institute of Standards and Technology.
      Conformance test for W3C XML Schema Part 2: Datatypes.
      Created Jan 13, 2004.

      File: NISTSchema-SV-IV-union-anyURI-float-pattern-1.xsd
      This schema specifies a datatype, NISTSchema-SV-IV-union-anyURI-float-pattern-1,
      which is derived by restriction of a union of built-in types 
      anyURI and float
      by facet pattern with a value of: \d{1}\.\d{3}E\d{2}
      This schema is intended to be valid with
      regard to the schema for schemas.
    </xs:documentation>
  </xs:annotation>

  <xs:element name="NISTSchema-SV-IV-union-anyURI-float-pattern-1" type="NISTSchema-SV-IV-union-anyURI-float-pattern-1-Type"/>

  <xs:simpleType name="unionOf-anyURI-float">
    <xs:union memberTypes="xs:anyURI xs:float"/>
  </xs:simpleType>

  <xs:simpleType name="NISTSchema-SV-IV-union-anyURI-float-pattern-1-Type">
    <xs:restriction base="unionOf-anyURI-float">
      <xs:pattern value="\d{1}\.\d{3}E\d{2}"/>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>
