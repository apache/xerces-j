<?xml version="1.0" encoding="UTF-8"?>
<!-- test explicitTimezone facet: cannot derive "optional" from "prohibited" -->
<!-- requires XSD 1.1 -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
    
    <xs:element name="doc" type="timeStamp"/>
  
    <xs:simpleType name="timeStamp">
       <xs:restriction base="xs:time">     
         <xs:explicitTimezone value="prohibited"/>
       </xs:restriction>
    </xs:simpleType>
    
    <xs:simpleType name="timeStampOptional">
       <xs:restriction base="timeStamp">     
         <xs:explicitTimezone value="optional"/>
       </xs:restriction>
    </xs:simpleType>    
      
</xs:schema>
