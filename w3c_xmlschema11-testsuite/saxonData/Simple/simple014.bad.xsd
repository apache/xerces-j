<?xml version="1.0" encoding="UTF-8"?>

<!--
Member of a union is not substitutable if the union is derived by restriction from another union

-->

<xs:schema
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  targetNamespace="http://simple014.ly/"
  elementFormDefault="qualified"
  xmlns:s="http://simple014.ly/">
  
  <xs:element name="book">
    <xs:complexType>
        <xs:sequence maxOccurs="unbounded">
            <xs:element ref="s:doc"/>
        </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="doc" type="s:doc-type"/>
  
  <xs:complexType name="doc-type">
      <xs:sequence maxOccurs="unbounded">
          <xs:element name="chap" type="s:chap"/>
      </xs:sequence>
  </xs:complexType>
  
  <xs:element name="subdoc" substitutionGroup="s:doc" type="s:sub-doc-type"/>
  
  <xs:complexType name="sub-doc-type">
    <xs:complexContent>
        <xs:restriction base="s:doc-type">
          <xs:sequence maxOccurs="unbounded">
              <xs:element name="chap" type="s:sub-chap"/>
          </xs:sequence>
        </xs:restriction>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:simpleType name="ddt">
    <xs:union memberTypes="xs:date xs:dateTime xs:time"/>
  </xs:simpleType>
  
  <xs:simpleType name="chap">
     <xs:restriction base="s:ddt">
        <xs:pattern value=".*Z"/>
     </xs:restriction>
  </xs:simpleType>
  
  <xs:simpleType name="dt">
    <xs:union memberTypes="xs:date xs:dateTime"/>
  </xs:simpleType>
  
   <xs:simpleType name="sub-chap">
       <xs:restriction base="xs:date"/>
  </xs:simpleType>

</xs:schema>
